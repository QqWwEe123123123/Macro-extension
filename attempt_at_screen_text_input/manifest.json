{
  "manifest_version": 2, 
  "name": "Macro extenstion++", 
  "description": "A macro to automate your task",
  "version" : "0.1.0",
  "browser_action": {
      "default_popup": "popup.html",
      "default_title": "A popup will come here",
      "default_icon": "icon.png"
  },
  "content_scripts": [
      {
          "matches":[
              "<all_urls>"
          ],
          "js": ["content.js"]
      }
  ],
  "background": {
      "scripts":["background.js"]
  },
  "permissions" : [
      "tabs"
  ]
}